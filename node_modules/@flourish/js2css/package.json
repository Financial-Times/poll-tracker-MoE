{
  "name": "@flourish/js2css",
  "version": "1.0.0",
  "description": "Flourish module to convert js inline styles to stylesheet",
  "main": "js2css.js",
  "module": "src/index.js",
  "scripts": {
    "lint": "eslint src",
    "build": "rollup -c",
    "prepare": "npm run build && npm run minify",
    "minify": "uglifyjs -m -o js2css.min.js js2css.js",
    "precommit": "lint-staged"
  },
  "author": "Kiln Enterprises Ltd",
  "license": "UNLICENSED",
  "devDependencies": {
    "@flourish/eslint-plugin-flourish": "^0.7.2",
    "eslint": "^5.13.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.3",
    "rollup": "^1.1.2",
    "rollup-plugin-node-resolve": "^4.0.0",
    "uglify-js": "^3.4.9"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/kiln/flourish-js2css.git"
  },
  "lint-staged": {
    "*.js": "eslint src"
  }
}
