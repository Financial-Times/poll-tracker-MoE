  "author": "Kiln Enterprises Ltd",
  "license": "UNLICENSED",
  "dependencies": {
    "@flourish/js2css": "^1.0.0",
    "d3-array": "^1.0.0",
    "d3-scale": "^2.2.2",
    "d3-selection": "^1.4.0"
  },
  "devDependencies": {
    "@flourish/cypress": "^2.12.1",
    "@flourish/eslint-plugin-flourish": "^0.7.2",
    "cypress": "^7.2.0",
    "eslint": "^5.16.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.3",
    "rollup": "^1.1.2",
    "rollup-plugin-node-resolve": "^4.0.0",
    "uglify-js": "^3.4.9"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/kiln/flourish-legend.git"
  },
  "lint-staged": {
