{
  "name": "create-ft-graphics-flourish",
  "version": "1.0.0",
  "description": "A modern template for use on flourish.studio by Financial Times' Graphics team",
  "main": "template.js",
  "authors": [
    "Ã†ndra Rininsland"
  ],
  "license": "MIT",
  "keywords": [
    "flourish"
  ],
  "scripts": {
    "build": "rollup -c",
    "sass": "sass --source-map sass/style.scss static/style.css",
    "start": "flourish run -o"
